                            @if (item.Product.Quantity == null)
                                    {
                                    <span class="opt-right"> N/A </span>
                                    }
                                    else
                                    {
                                    <span class="opt-right"> @item.Product.Quantity </span>
                                    }
                        </li>
                        <li>
                            <span class="opt-left">Price</span>
                            <span class="opt-right">@item.Product.Price</span>
                        </li>
                    </ul>
                </div>
            </div>
        </a>
    }
