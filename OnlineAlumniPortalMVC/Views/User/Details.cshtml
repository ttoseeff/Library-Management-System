                url: '/PlugNPointService.asmx/ChangeOrderStatus',
                data: JSON.stringify({ OrderID: OrderID, StatusID: StatusID }),
                //async: false,

                contentType: 'application/json;charset=utf-8',
                dataType: 'json',
