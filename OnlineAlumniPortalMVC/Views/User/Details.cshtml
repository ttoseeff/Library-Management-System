                        @foreach (var itm in item.Product.ProductPhotos.Take(1))
                                    {
                                    <img src="https://invent.plugnpoint.ae/Resources/ProductsImages/@itm.Product.ProductBrand.BrandName.Trim()/@itm.Thumbnail">
                                    }
                    </div>

                </div>


